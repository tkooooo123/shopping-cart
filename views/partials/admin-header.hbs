<div class="container">
    <nav>
        <div class="d-flex align-items-center justify-content-between row">
            <div class="col-4">
                
            </div>
            {{#if products}}
            <div class="col-2">
                <form action="/admin/product/add">
                    <button type="submit" class="btn btn-primary mt-2">Create Product</button>
                </form>

            </div>
            {{/if}}
            {{#if orders}}
            <div class="bars d-flex  justify-content-between align-items-center" style="width: 550px;">
                <a class="link" href="/admin/orders">All</a>
                <a class="link" href="/admin/orders?payment=-1&shipping=-1">Canceled</a>
                <form action="/admin/orders" onchange="submit()"
                    class="d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        <label for="payment" class="me-2">Payment</label>
                        <select name="payment" id="payment" class="form-select me-2">
                            <option value="all">All</option>
                            <option value="0" {{#ifCond payment '0' }}selected{{/ifCond}}>Unpaid</option>
                            <option value="1" {{#ifCond payment '1' }}selected{{/ifCond}}>Paid</option>
                        </select>
                    </div>
                    <div class="d-flex align-items-center">
                        <label for="shipment" class="me-2">Shipment</label>
                        <select name="shipment" id="shipment" class="form-select">
                            <option value="all">All</option>
                            <option value="0" {{#ifCond shipment '0' }}selected{{/ifCond}}>Unshipped</option>
                            <option value="1" {{#ifCond shipment '1' }}selected{{/ifCond}}>Shipped</option>
                        </select>
                    </div>


                </form>

            </div>
            {{/if}}

        </div>


    </nav>
</div>
<div class="container" style="max-width: 950px;">
    <div class="step-container d-flex justify-content-center mt-5 mb-3">
        <div class="step active">
            <div class="circle-container"></div>
            <div class="label-container">確認商品</div>
        </div>
        <div class="step ">
            <div class="circle-container"></div>
            <div class="label-container">填寫個人資料</div>
            <span class="connect-line"></span>
        </div>
        <div class="step ">
            <div class="circle-container"></div>
            <div class="label-container">完成訂單</div>
            <span class="connect-line"></span>
        </div>
    </div>
    <div class="table-wrapper mt-5">
        <div class="table-title">確認商品</div>
        <table class="table" style="vertical-align: middle;">
            <thead style="text-align: center;">
                <tr>
     
                    <th scope="col">商品圖片</th>
                    <th scope="col">商品名稱</th>
                    <th scope="col">數量</th>
                    <th scope="col">價格</th>
                    <th scope="col">小計</th>
                    <th scope="col">刪除</th>

                </tr>
            </thead>
            <tbody style="text-align: center;">
                {{#each carts}}
                <tr>
                    <td>
                        <img src="{{this.cartProducts.image}}" alt="" width="200px">
                    </td>
                    <td>{{this.cartProducts.name}}</td>
                    <td>
                        <div class="d-flex align-items-center justify-content-center">
                            <form action="/carts/cartItem/{{this.cartProducts.CartItem.id}}/sub" method="POST">
                                <button type="submit" class="btn btn-sm btn-outline-secondary">-</button>
                            </form>
                            <span style="margin: 0 10px;">
                                {{this.cartProducts.CartItem.quantity}}
                            </span>
                            <form action="/carts/cartItem/{{this.cartProducts.CartItem.id}}/add" method="POST">
                                <button type="submit" class="btn btn-sm btn-outline-secondary">+</button>
                            </form>
                        </div>
                    </td>
                    <td>${{this.cartProducts.price}}</td>
                    <td>
                        {{this.cartProducts.CartItem.quantity}}
                        *
                        {{this.cartProducts.price}}
                    </td>
                    <td>
                        <form action="/carts/cartItem/{{this.cartProducts.CartItem.id}}/delete?_method=DELETE"
                            method="POST">
                            <button type="submit" class="btn">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
                {{/each}}
                <tr>
                    <th scope="row"></th>
                    <td colspan="4"></td>
                    <td>Total:</td>
                    <td>${{totalPrice}}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="control-wrapper d-flex justify-content-end">
        <a class="prev-step" href="/products">繼續購物</a>
        <a class="next-step" href="/carts/checkout">下一步</a>
    </div>
</div>

<div class="container d-flex">
  <div class="row mt-3">
    {{#each products}}
    <div class="col md-4 ">
      <div class="card mb-4 p-2" style="width: 18rem;">
        <a href="/products/{{this.id}}">
          <img src="{{this.image}}" class="card-img-top" alt="...">
        </a>
        <div class="card-body">
          <a href="/products/{{this.id}}">
            <h5 class="card-title">{{this.name}}</h5>
          </a>
          <p class="card-text">$ {{this.price}}</p>
        </div>
      </div>
    </div>
    {{/each}}
  </div>

</div>
<div class="d-flex justify-content-center">
    <nav class="mt-3" aria-label="page navigation">
        <ul class="pagination">
            <li class="page-item {{#ifCond pagination.currentPage 1}}disabled{{/ifCond}}">
                <a class="page-link" href="/products?page={{pagination.prev}}&categoryId={{categoryId}}"
                    aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            {{#each pagination.pages}}
            {{#ifCond this ../pagination.currentPage}}
            <li class="page-item active"><a class="page-link" href="#">{{this}}</a></li>
            {{else}}
            <li class="page-item">
                <a class="page-link" href="/products?page={{this}}&categoryId={{../categoryId}}">{{this}}</a>
            </li>
            {{/ifCond}}
            {{/each}}
            <li class="page-item {{#ifCond pagination.currentPage pagination.totalPage}}disabled{{/ifCond}}">
                <a class="page-link" href="/products?page={{pagination.next}}&categoryId={{categoryId}}"
                    aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>
<ul class="nav nav-pills">
  <li class="nav-item">
    <a class="nav-link {{#ifCond '' categoryId}}active{{/ifCond}}" href="?categoryId=">全部</a>
  </li>
  {{#each categories}}
    <li class="nav-item">
      <a class="nav-link {{#ifCond this.id ../categoryId}}active{{/ifCond}}"
        href="?categoryId={{this.id}}">{{this.name}}</a>
    </li>
  {{/each}}
</ul>
<div class="container d-flex">
<div class="row mt-3">
  {{#each products}}
  <div class="col md-4 ">
    <div class="card mb-4 p-2">
      <a href="/products/{{this.id}}">
        <img src="{{this.image}}" class="card-img-top" alt="..."  height="180px">
      </a>
      <div class="card-body">
        <a href="/products/{{this.id}}">
          <h5 class="card-title">{{this.name}}</h5>
        </a>
        <p class="card-text">$ {{this.price}}</p>
      </div>
    </div>
  </div>
  {{/each}}
</div>


</div>
